generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Usuario{
  id      Int       @id @default(autoincrement())
  email   String    @unique
  senha   String
  nome    String
  tarefas Tarefas[]    
}
model Tarefas {
  id          Int      @id @default(autoincrement())
  titulo      String
  descricao   String?
  status      String   @default("pendente") // pode ser "pendente", "conclu√≠da", etc.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  usuarioId   Int
  usuario     Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
}